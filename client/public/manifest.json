{
  "name": "RetailFlow AI - Premium Shopping Experience",
  "short_name": "RetailFlow",
  "description": "The ultimate AI-powered shopping app with smart cart, AR try-on, and intelligent recommendations",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#667eea",
  "background_color": "#ffffff",
  "scope": "/",
  "lang": "en-US",
  "categories": ["shopping", "lifestyle", "productivity"],
  "icons": [
    {
      "src": "favicon.ico",
      "sizes": "64x64 32x32 24x24 16x16",
      "type": "image/x-icon"
    },
    {
      "src": "logo192.png",
      "type": "image/png",
      "sizes": "192x192",
      "purpose": "any"
    },
    {
      "src": "logo512.png",
      "type": "image/png",
      "sizes": "512x512",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Smart Cart",
      "short_name": "Cart",
      "url": "/?view=cart",
      "icons": [{ "src": "logo192.png", "sizes": "192x192" }]
    },
    {
      "name": "AR Try-On",
      "short_name": "AR",
      "url": "/?view=ar",
      "icons": [{ "src": "logo192.png", "sizes": "192x192" }]
    },
    {
      "name": "AI Assistant",
      "short_name": "Chat",
      "url": "/?view=chat",
      "icons": [{ "src": "logo192.png", "sizes": "192x192" }]
    }
  ],
  "prefer_related_applications": false,
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "share_target": {
    "action": "/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
